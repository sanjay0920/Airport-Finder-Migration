@{
    @model IEnumerable<airport_finder.Models.AirportInfo>

    <body class="servbg">
        <h2>AirportList</h2>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">



        <table class="table table-striped">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>
                        @Html.DisplayNameFor(model => model.IataCode)
                    </th>



                    <th>
                        @Html.DisplayNameFor(model => model.AirportName)
                    </th>



                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>



                </tr>
            </thead>
            <tbody id="mytable">



                @foreach (var item in Model)
                {
                    <tr>




                        <td>
                            @Html.DisplayFor(modelItem => item.IataCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AirportName)
                        </td>



                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>



                    </tr>
                }
            </tbody>
        </table>
        <script>
            var table = document.getElementById("mytable");
            var rows = table.getElementsByTagName("tr");

            for (var i = 0; i < rows.length; i++) {
                var row = rows[i];
                var idcell = document.createElement("td");
                idcell.textContent = i + 1;
                row.insertBefore(idcell, row.firstChild);


            }</script>
    </body>
}