@{
    @model IEnumerable<airport_finder.Models.StateImg>




    <html>

    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    </head>

    <body style="background-color:lightblue">

        <div>
            <h2 style="text-align:center"><b>Find a State</b></h2>
            <h4 style="color:brown;text-align:center">Time To Travel In The World </h4>
        </div>
        <div style="text-align:center">@TempData["state"]</div>
        <div class="container-fluid">
            <div class="row">
                @using (Html.BeginForm("StateWiseAirports", "Airport", FormMethod.Post))
                {
                    <div class="form-horizontal">
                        <div class="col-md-4">
                            <label></label>
                        </div>
                        <div class="col-md-3">
                            <div class="searchbox"> <input type="text" name="state" class="form-control" placeholder="Find state" /></div>
                        </div>
                        <div class="col-md-2">
                            <div class="margin"> <button class="btn btn-primary" type="submit">  <span class="glyphicon glyphicon-search"></span> Search</button></div>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                }
            </div>
        </div>
        <style>
            .margin {
                margin-left: 155%;
                margin-top: -21%;
            }

            .searchbox {
                -moz-border-right-colors: darkblue;
            }
        </style>
        <div class="container-fluid" style="margin-top:10px;">
            @if (Model != null)
            {
                <div class="row">
                    @foreach (var m in Model)
                    {
                        <div class="col-md-4" style="margin-top:20px">
                            <div class="card" style="width: 20rem; border-radius: 10px">
                                <img class="card-img-top" src="~/Img/@m.Photo" alt="Card image cap" style="height:15rem;width:20rem;">
                                <div class="card-body">
                                    <h5 class="card-title">@m.State</h5>
                                    <span id="actlink">@Html.ActionLink("View Airports", "AirportList", new { @id = m.State })</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align:center; color:red"><h4>No Results found</h4></div>
            }
        </div>

        <script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
    </body>
    </html>
}
